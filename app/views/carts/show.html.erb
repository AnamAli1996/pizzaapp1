<table>
<% @cart.lineitems.each do |item| %>
<tr>
	<td><%= item.quantity %> &times; </td>
	<td><%= item.pizza.pizza_name %></td>
</tr>
<% end %>
</table>

<div class="btn btn-default">
	<%= link_to "Continue Shopping?", root_path, :method => :get %>
</div>

<div class="btn btn-default">
	<%= link_to 'Empty Cart', @cart, method: :delete, confirm: 'Are you sure?' %>
</div>

<div class="btn btn-default">
<%= link_to "Checkout", new_order_path, :method=> :get %>
</div>