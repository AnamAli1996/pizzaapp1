<p id="notice"><%= notice %></p>

<h1>Listing Desserts</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Dessert name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Vegetarian</th>
      <th>Gluten free</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desserts.each do |dessert| %>
      <tr>
        <td><b><%= dessert.dessert_name %></b></td>
        <td><%= dessert.price %></td>
        <td><%= dessert.description %></td>
        <td><%= dessert.vegetarian %></td>
        <td><%= dessert.gluten_free %></td>
        <td><%= image_tag(dessert.image, :size=>"100x80") %></td>
        <td><%= link_to 'Show', dessert %></td>
        <td><%= link_to 'Edit', edit_dessert_path(dessert) %></td>
        <td><%= link_to 'Destroy', dessert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

