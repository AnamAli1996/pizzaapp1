<p id="notice"><%= notice %></p>

<h1>Listing Customer Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Customer</th>
      <th>Employee</th>
      <th>Delivery time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_orders.each do |customer_order| %>
      <tr>
        <td><%= customer_order.order_id %></td>
        <td><%= customer_order.customer.first_name %></td>
        <td><%= customer_order.delivery_time %></td>
        <td><%= link_to 'Show', customer_order %></td>
        <td><%= link_to 'Edit', edit_customer_order_path(customer_order) %></td>
        <td><%= link_to 'Destroy', customer_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

