<h1> Choose your pick! </h1>
<% if !@products.empty? %>
	<% @products.each do |product| %>
		<%=image_tag(product.image, :size => "50x50")%>
		<h3><%= product.Name %></h3>
		<%= euro(product.price)%>
		<%= button_to 'Add to Cart', lineitems_path(product_id: product)%>
	<% end %>
<% else %>
	<p> There are no products for sale </p>
<% end %>	