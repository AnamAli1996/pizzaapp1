<p id="notice"><%= notice %></p>

<h1>Listing Pizzas</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Pizza name</th>
      <th>Pizza size</th>
      <th>Price</th>
      <th>Description</th>
      <th>Vegetarian</th>
      <th>Gluten free</th>
      <th>Spice level</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><b><%= pizza.pizza_name %></b></td>
        <td><%= pizza.pizza_size %></td>
        <td><%= pizza.price %></td>
        <td><%= pizza.description %></td>
        <td><%= pizza.vegetarian %></td>
        <td><%= pizza.gluten_free %></td>
        <td><%= pizza.spice_level %></td>
        <td><%= image_tag(pizza.image, :size=>"100x80") %></td>
		
        <td><%= link_to 'Show', pizza %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

