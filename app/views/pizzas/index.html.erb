<p id="notice"><%= notice %></p>

<h1>Listing Pizzas</h1>



Can't find what you are looking for? <%=link_to "Click here", search_index_path %>

<p> <% if signed_in2? %>
			<%= link_to 'Apply Discount', discount_path, method: :get %>
<% end %>
</p>



<table class="table table-bordered">
  <thead>
    <tr>
      <th>Pizza name</th>
      <th>Pizza size</th>
      <th>Price</th>
      <th>Description</th>
      <th>Vegetarian</th>
      <th>Gluten free</th>
      <th>Spice level</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><b><%= pizza.pizza_name %></b></td>
        <td><%= pizza.pizza_size %></td>
        <td><%= euro pizza.price %></td>
        <td><%= pizza.description %></td>
        <td><%= yesno(pizza.vegetarian) %></td>
        <td><%= glutenfree(pizza.gluten_free) %></td>
        <td><%= pizza.spice_level %></td>
        <td><%= image_tag(pizza.image, :size=>"100x80") %></td>
		<td><%= button_to 'Add to Cart', lineitems_path(pizza_id: pizza) %></td>
        <td><%= link_to 'Show', pizza %></td>
		<% if signed_in2? %>
			<td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
			<td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>	
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in2? %>
<%= link_to 'New Pizza', new_pizza_path %>
<% end %>