<p id="notice"><%= notice %></p>

<h1>Listing Sides</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Side name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Vegetarian</th>
      <th>Gluten free</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sides.each do |side| %>
      <tr>
        <td><b><%= side.side_name %></b></td>
        <td><%= side.price %></td>
        <td><%= side.description %></td>
        <td><%= side.vegetarian %></td>
        <td><%= side.gluten_free %></td>
        <td><%= image_tag(side.image, :size=>"100x60") %></td>
        <td><%= link_to 'Show', side %></td>
        <td><%= link_to 'Edit', edit_side_path(side) %></td>
        <td><%= link_to 'Destroy', side, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

